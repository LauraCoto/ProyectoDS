@model Juega.Models.Juega.CanchaModel

@{
    ViewBag.Title = "Profile";
}
<div class="unwrap">
    <div style="background-image: url(/Content/Images/profile-bg.jpg)" class="bg-cover">
        <div class="p-xl text-center text-white">
            <img src="~/Content/Images/user/09.jpg" alt="Image" class="img-thumbnail img-circle thumb128" />
            <h3 class="m0"> @Model.Nombre </h3>
        </div>
    </div>


    <div class="text-center bg-gray-dark p-lg mb-xl">
        <div class="row row-table">
            <div class="col-xs-4 br">
                <h3 class="m0">@Model.Valoracion /5</h3>
                <p class="m0">
                    <span class="hidden-xs">Valoracion</span> 
                </p>
            </div>
            <div class="col-xs-4">
                <h3 class="m0">@Model.Largo Largo @Model.Ancho Ancho  </h3>
                <p class="m0">Dimensiones</p>
            </div>
            <div class="col-xs-4 br">
                <h3 class="m0">@Model.Espectadores </h3>
                <p class="m0">
                    <span class="hidden-xs">Capacidad Espectadores</span>
                </p>
            </div>



        </div>
    </div>
    
</div>

@section Styles {

}
@section Scripts {
    <!-- Include this script for any page that uses Google Maps.-->
    @Scripts.Render("//maps.google.com/maps/api/js?sensor=false")
    @Scripts.Render("~/bundles/gmap")
}
