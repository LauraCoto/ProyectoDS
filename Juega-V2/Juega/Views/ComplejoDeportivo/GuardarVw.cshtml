@model Juega.Models.Juega.ComplejoModel


<h3>Informacion del complejo</h3>


<link href="~/Content/bootstrap-responsive.min.css" rel="stylesheet" />
<link href="~/Content/bwizard.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap-fileupload.min.css" rel="stylesheet" />

<script src="~/Scripts/Mapas/LogicaMapas.js" type="text/javascript"></script>


@using (Html.BeginForm("Guardar", "ComplejoDeportivo", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>

        <div class="container">
            <div id="wizard">
                <ol>
                    <li>Información del complejo</li>
                    <li>Fotografias</li>
                    <li>Ubicación</li>
                    <li>Finalizar</li>
                </ol>


                <div id="complejo">


                    <div class="editor-field">
                        @Html.HiddenFor(model => model.IdComplejoDeportivo, new { @class = "form-control required", @hidden = "hidden" })
                        @Html.HiddenFor(model => model.FotoPrincipal, new { @class = "form-control required", @hidden = "hidden" })
                    </div>

                    <label for="Nombre">* Nombre del complejo</label>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control required" })
                        @Html.ValidationMessageFor(model => model.Nombre)
                    </div>

                    <label for="Nombre">Telefono</label>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.Telefonos, new { @class = "form-control required" })
                        @Html.ValidationMessageFor(model => model.Telefonos)
                    </div>

                    <label for="Nombre">Direccion</label>
                    <div class="editor-field">
                        @Html.TextAreaFor(model => model.Direccion, new { @class = "form-control required", @rows = "5" })
                        @Html.ValidationMessageFor(model => model.Direccion)
                    </div>


                    <fieldset>
                        <br />
                        <br />
                        <p>(*) Obligatorio</p>
                    </fieldset>
                </div>

                <div id="fotos">
                    <p>Ruta: <small>@Html.ValueFor(model => model.FotoPrincipal)</small></p>
                    @Html.FileFor(model => model.Attachment)
                    <div class="container">
                        <div class="col-md-4" style="padding-left: 0px;  padding-right: 0px;">
                            <img src="@Model.FotoPrincipal" class="img-responsive">
                        </div>
                    </div>

                </div>

                <div id="mapa">
                    <label for="Nombre">Coordenadas</label>
                    <div class="editor-field">
 
                            <input type="TEXT" id="cordenadax" placeholder="Latitud">
                            <input type="TEXT" id="cordenaday" placeholder="Longitud">
                            <br>
                            <input type="button" onclick="init()" id="btn_cargarMapa" placeholder="Latitud" value="Cargar Mapa">
                            <input type="button" onclick="localizar()" id="btn_ObtenerCoordenadas" placeholder="Latitud" value="Buscar mis coordenadas">
                            <br>
                            <div id="mapa" style="width: 700px; height: 500px;"></div>
                            <br>

 

                        @Html.TextBoxFor(model => model.Coodernadas, new { @class = "form-control required" })
                        @Html.ValidationMessageFor(model => model.Coodernadas)
                    </div>
                </div>

                <div id="Finalizar">
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">@ViewBag.Accion</button>
                        @Html.ActionLink("Cancelar", "Inicio", "ComplejoDeportivo", new { @class = "btn " })
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

<script src="~/Scripts/bwizard.min.js"></script>
<script src="~/Scripts/bootstrap-fileupload.js"></script>


<script type="text/javascript">
    $("#wizard").bwizard();
</script>
@section Scripts {
    <!-- Include this script for any page that uses Google Maps.-->
    @Scripts.Render("//maps.google.com/maps/api/js?sensor=false")
    @Scripts.Render("~/bundles/gmap")
}
