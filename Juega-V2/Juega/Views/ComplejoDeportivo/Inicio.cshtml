@{
    ViewBag.Title = "Index";
}

<h3>Complejos Deportivos</h3>
<script src="~/app/controller/complejoDeportivoCtrl.js"></script>


<div class="panel-body">
    <a href="/ComplejoDeportivo/Crear/" class="mb-sm btn btn-primary">Crear Complejo</a>
</div>

<div class="container" ng-app="appComplejo" ng-controller="complejoDeportivoCtrl">
    <div class="row">
        <div class="col-md-12">

            <div ng-repeat="item in ListaRegistros">

                <div class="col-lg-4">
                    <div class="panel widget">
                        <div style="background-image: url('../../Content/Images/cancha2.jpg'); " class="panel-body text-center bg-center">
                            <div class="row row-table">
                                <div class="col-xs-12 text-white">
                                    <img src="~/Content/Images/user/06.jpg" alt="Image" class="img-thumbnail img-circle thumb128" />
                                    <h3 class="m0">{{item.Nombre}}</h3>
                                    <p class="m0">
                                        <em class="fa fa-twitter fa-fw"></em> {{item.Direccion}}
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="panel-body text-center bg-green">
                            <div class="row row-table">
                                <div class="col-xs-4"> 
                                    <a href="/ComplejoDeportivo/Crear/{{item.IdComplejoDeportivo}}" class=" text-white">
                                        <em class="fa fa-fw fa-clock-o text-muted"></em>Editar
                                    </a>
                                </div> 
                            </div>
                        </div>

                        <div class="list-group">
                            <a href="#" class="list-group-item">
                                <span class="label label-primary pull-right">{{item.Telefonos}}</span>
                                <em class="fa fa-fw fa-clock-o text-muted"></em>Telefonos
                            </a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
