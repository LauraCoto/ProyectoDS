@{
    ViewBag.Title = "Index";
}

<script src="~/app/controller/RolesCtrl.js"></script>


<div class="container" ng-app="appRoles" ng-controller="RolesCtrl">
    <div class="row">
        <div class="col-md-12">

            <div ng-if="MostrarError=='S'">
                <div class="alert alert-danger" role="alert">
                    {{Mensaje}}
                </div>
            </div>

            <div ng-if="MostrarError=='N'">
                <table class="table table-striped">
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th> 
                    </tr>

                    <tr ng-repeat="item in ListaRegistros">
                        <td> {{item.Id}}  </td>
                        <td> {{item.Nombre}} </td> 
                        <td>
                            <button type="button" ng-click="EditarRegistro(item)" class="btn-green">Editar</button>
                            <button type="button" ng-click="EliminarRegistro(item)" class="btn-danger">Borrar</button>
                        </td>
                    </tr>

                    <form name="form" class="css-form" novalidate>
                        <tr ng-if="MostrarControles">

                            <td>
                                <input type="text" disabled="disabled" class="form-control" placeholder="Id Registro" ng-model="Registro.Id" />
                            </td>

                            <td>
                                <input type="text" class="form-control" placeholder="Nombre" maxlength="100" name="txtNombre" ng-model="Registro.Nombre" />
                            </td>
                             
                            <td>
                                <button type="button" class="btn btn-primary" ng-click="Guardar()">Aceptar</button>
                                <button type="button" class="btn btn-default" ng-click="Limpiar()">Cancelar</button>
                            </td>
                        </tr>
                    </form>


                </table>
                <a ng-click="NuevoRegistro()" class="btn btn-primary">Agregar</a> 
            </div>

        </div>
    </div>
</div>
