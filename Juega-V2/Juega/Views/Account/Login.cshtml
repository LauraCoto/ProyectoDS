@using Juega.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesion";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<head>
    <link href="~/Content/app/css/login.css" rel="stylesheet" />
    <script src="~/Scripts/PassWordStrong.js"></script>
</head>

<div class="container">

    <div class="row" id="pwd-container">
        <div class="col-md-4"></div>

        <div class="col-md-4">

            <section class="login-form">
                <form method="post" action="#" role="login">

                    <img src="~/Content/Images/futbol.png" class="img-responsive" alt="" />
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-lg", @type = "email", @placeholder = "Corrreo" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg", @type = "password", @placeholder = "Clave" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="checkbox c-checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "checkbox", @type = "checkbox" })
                            <label>
                                <input type="checkbox" />
                                <span class="fa fa-check"></span>Recordarme
                            </label>
                        </div> 
                        <button type="submit" name="go" class="btn btn-lg btn-primary btn-block">Iniciar sesion</button>
                        <div>
                            <a>@Html.ActionLink("Registrarme", "Register")</a>
                            <a>@Html.ActionLink("Olvide mi clave?", "ForgotPassword") </a>
                        </div>
                    }

                </form>
            </section>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>
 

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
