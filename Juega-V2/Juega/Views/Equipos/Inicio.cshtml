                                <div class="col-xs-12 text-white">
                                    <img src={{item.FotoPrincipal}} alt="Image" class="img-thumbnail img-circle thumb128" />
                                    <h3 class="m0">{{item.Nombre}}</h3>
                                </div>
                            </div>
                        </div>

                        <div class="panel-body text-center bg-green">
                            <div class="row row-table">
                                <div class="col-xs-4">
                                    <a href="/Equipos/GuardarVw/{{item.IdEquipo}}" class=" text-white">
                                        <em class="fa fa-folder-open-o fa-2x pull-left"></em>
                                    </a>

                                    <a href="/Equipos/EliminarVw/{{item.IdEquipo}}" class=" text-white">
                                        <em class="fa fa-user fa-2x pull-right"></em>
                                    </a>

                                </div>
                            </div>
                        </div>


