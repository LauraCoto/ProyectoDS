    ViewBag.Title = "Index";
}

<h3>Equipos</h3>
<script src="~/app/controller/EquipoCtrl.js"></script>


<div class="panel-body">
    <a href="/Equipos/GuardarVW/" class="mb-sm btn btn-primary">Crear Equipo</a>
</div>


<div class="container" ng-app="appEquipo" ng-controller="EquipoCtrl">
    <div class="row">
        <div class="col-md-12">

            <div ng-repeat="item in ListaRegistros">

