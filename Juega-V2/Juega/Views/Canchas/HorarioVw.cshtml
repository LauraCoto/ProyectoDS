@model Juega.Models.Juega.CanchaModel



<h3>Horario</h3>


<link href="~/Scripts/datetime/css/bootstrap-datepicker.min.css" rel="stylesheet" />
<link href="~/Scripts/datetime/css/bootstrap-datepicker.standalone.min.css" rel="stylesheet" />
<link href="~/Scripts/datetime/css/bootstrap-datepicker3.min.css" rel="stylesheet" />
<link href="~/Scripts/datetime/css/bootstrap-datepicker3.standalone.min.css" rel="stylesheet" />
<script src="~/Scripts/datetime/js/jquery-1.11.3.js"></script>
<script src="~/Scripts/datetime/js/bootstrap-datepicker.min.js"></script>
<script src="~/Scripts/datetime/js/bootstrap.min.js"></script>
<script src="~/Scripts/moment.js"></script>
<script src="~/Vendor/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js"></script>
<link href="~/Vendor/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />



@using (Html.BeginForm("Horario", "Canchas"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="editor-field">
        @Html.HiddenFor(model => model.IdCancha, new { @class = "form-control required", @hidden = "hidden" })
    </div>

    <h3><small>Definir horario de la cancha :  @Model.Nombre </small></h3>

    <div class="row">
        <div class="span10">
            <div class="tabbable">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#0" data-toggle="tab">Horario</a></li>
                    <li><a href="#1" data-toggle="tab">Clonar Horario</a></li>
                </ul>
                <div class="tab-content">



                    <div class="tab-pane active" id="0">
                        <div class="form-group mb">
                            <label class="col-sm-2 control-label mb">Desde</label>
                            <div class="col-sm-4">
                                <div id="HoraDesde" class="input-group date">
                                    <input type="text" class="form-control">
                                    <span class="input-group-addon">
                                        <span class="fa fa-clock-o"></span>
                                    </span>
                                </div>
                                <span class="input-group-addon">Hasta</span>
                                <div id="HoraHasta" class="input-group date">
                                    <input type="text" class="form-control">
                                    <span class="input-group-addon">
                                        <span class="fa fa-clock-o"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="tab-pane" id="1">

                        <br />

                        <label class="col-sm-2 control-label mb">Clonar el horario del dia:</label>
                        <div class="col-sm-4">
                            <div class="input-group date" id="FechaClonar">
                                <input type="text" class="form-control">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                            </div>
                        </div>

                        <label class="col-sm-2 control-label mb">Para cada dia del:</label>
                        <div class="col-sm-4">
                            <div class="input-daterange input-group" id="datepicker">
                                <input type="text" class="input-sm form-control" name="start" />
                                <span class="input-group-addon">Hasta</span>
                                <input type="text" class="input-sm form-control" name="end" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    $('#datepicker').datepicker({
        weekStart: 1,
        todayBtn: true,
        clearBtn: true,
        language: "es",
        todayHighlight: true,
        toggleActive: true
    });


    $('#FechaClonar').datepicker({
        weekStart: 1,
        todayBtn: true,
        clearBtn: true,
        language: "es",
        todayHighlight: true,
        toggleActive: true
    });


    $('#HoraDesde').datetimepicker({
        format: 'LT'
    });

    $('#HoraHasta').datetimepicker({
        format: 'LT'
    });

</script>
