<script src="~/Vendor/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js"></script>
<link href="~/Vendor/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />

<script src="~/app/controller/HorarioCtrl.js"></script>

<div class="container" ng-app="appHorario" ng-controller="HorarioCtrl" data-ng-init="Init('@ViewBag.IdCancha')">
  
    <h3>Definir horario de la cancha {{Cancha.Nombre}} </h3>

    <div ng-if="MostrarError=='S'">
        <br />
        <br />
        <div class="alert alert-danger" role="alert">
            {{Mensaje}}
        </div>
    </div>


    <div ng-if="MostrarAlerta=='S'">
        <br />
        <br />
        <div class="alert alert-warning" role="alert">
            {{Mensaje}}
        </div>
    </div>


    <div ng-if="MostrarInfo=='S'">
        <br />
        <br />
        <div class="alert alert-green" role="alert">
            {{Mensaje}}
        </div>
    </div>

    <div class="tabbable">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#0" data-toggle="tab">Horario</a></li>
            <li><a href="#1" data-toggle="tab">Clonar Horario</a></li>
        </ul>
        <div class="tab-content">



            <div class="tab-pane active" id="0">

                <br />

                <div class="row-sm-4">
                    <span class="input-group-addon">Desde</span>
                    <div id="HoraDesde" class="input-group date">
                        <input type="text" class="form-control">
                        <span class="input-group-addon">
                            <span class="fa fa-clock-o"></span>
                        </span>
                    </div>
                    <span class="input-group-addon">Hasta</span>
                    <div id="HoraHasta" class="input-group date">
                        <input type="text" class="form-control">
                        <span class="input-group-addon">
                            <span class="fa fa-clock-o"></span>
                        </span>
                    </div>
                </div>
            </div>

            <div class="tab-pane" id="1">

                <br /> 

                <span class="input-group-addon">Clonar el horario del dia:</span>
                <div class="row-sm-4">
                    <div class="input-group date" id="FechaClonar">
                        <input type="text" id="t1" class="form-control"/>
                        <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                    </div>
                    @*<button type="button" ng-click="MostrarHorarios()" data-notify="" data-message="Horario Generado, seleccione rango de fechas para clonar" data-options="{&quot;status&quot;:&quot;success&quot;}" class="btn btn-info">Consultar Horario</button>*@
                    <button type="button" ng-click="MostrarHorarios()" class="btn btn-info">Consultar Horario</button>

 
                </div>
                <br />
                <br />
               
                
                <div class="panel panel-default">
                    <div class="panel-heading">Horarrio de la fecha seleccionada</div>
                    <table class="table table-striped">
                        <tr>
                            <th>Id. Hora</th>
                            <th>Desde</th>
                            <th>Hasta</th>
                            <th>Estado</th> 
                        </tr>

                        <tr ng-repeat="item in HorarioXDia.ListaHoras">
                            <td> {{item.IdHorario_Hora}} </td>
                            <td> {{item.HoraDesde}} </td>
                            <td> {{item.HoraHasta}} </td>
                            <td> {{item.Estado}} </td> 
                        </tr>
                    </table>
                </div>
                <span class="input-group-addon">Para cada dia del:</span>
                <div class="row-sm-4">
                    <div class="input-daterange input-group" id="datepicker">
                        <input type="text"class="input-sm form-control" name="start" ng-model="FechaAplicarDesde" />
                        <span class="input-group-addon">Hasta</span>
                        <input type="text" class="input-sm form-control" name="end" ng-model="FechaAplicarHasta" />
                    </div>
                </div>
            </div>

            <br />
            <br />

        </div>
    </div>

</div>

<script type="text/javascript">

     

    $('#datepicker').datepicker({
        weekStart: 1,
        todayBtn: true,
        clearBtn: true,
        language: "es",
        todayHighlight: true,
        toggleActive: true
    });

    
    $('#FechaClonar').datepicker({
        weekStart: 1,
        todayBtn: true,
        clearBtn: true,
        language: "es",
        todayHighlight: true,
        toggleActive: true, 
    });

    $('#FechaClonar').change(function () {
       
    });

    $('#HoraDesde').datetimepicker({
        format: 'LT'
    });

    $('#HoraHasta').datetimepicker({
        format: 'LT'
    });

</script> 