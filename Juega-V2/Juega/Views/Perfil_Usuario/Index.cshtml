<style type="Text/CSS">
    .btn 
    {
        font-family: 'Times New Roman';
        font-size: 16px;
        text-align: center;
    }

    .panel-title
    {
        font-family: 'Times New Roman';
        font-size: 20px;
        text-align: center;
    }


    .control-label 
    {
        font-family: 'Times New Roman';
        color= 'black';
        font-size: 16px;
        text-align: center;
    }
