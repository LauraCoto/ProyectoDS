<section ng-app="appPerfil_Usuario" ng-controller="Perfil_UsuarioController">
    <center>
        <div class="container">
            <div class="row clearfix" id="content-row">
                <div class="col-xs-11 column">
                    <div class="well" id="volume-fees-well">
                        <br />
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <h3 class="panel-title">Perfil Usuario @Model.Nombre @Model.Apellido </h3>
                            </div>
                            <div class="panel-body">
                                <form name="Show_Profile">
                                    <fieldset>
                                        <div class="col-md-4">
                                            <br />
                                            <img src="~/Content/Images/user/player.png" class="img-responsive img-rounded" />
                                            <br />
                                            <div class="form-group form">
                                                <a href="@Url.Action("Index", "Denuncias")" class="btn btn-danger btn-md" ng-click="report">
                                                    <em class="fa fa-hand-o-right"></em>
                                                    <span>Reportar</span>
                                                </a>
                                            </div>
                                        </div>
                                        <br />
                                        <br />
                                        <div class="col-md-4" disabled="disabled">
                                            <div class="form-group">
                                                <label class="control-label" for="Firstname">Nombre</label>
                                                <div class="controls">
                                                    <input type="text" value=@Model.Nombre readonly="readonly" id="Firstname" class="form-control">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label" for="Surname">Apellido</label>
                                                <div class="controls">
                                                    <input type="text" value=@Model.Apellido readonly ="readonly" id="Surname" class="form-control">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label" for="Fecha_Nac">Fecha Nacimiento</label>
                                                <div class="controls">
                                                    <input type="text" value=@Model.Fecha_Nac readonly="readonly" id="Fecha_Nac" class="form-control">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="control-label" for="Email">Email</label>
                                                <div class="controls">
                                                    <input type="text" value=@Model.Correo readonly="readonly" id="Email" class="form-control">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label" for="Phone">Telefono</label>
                                                <div class="controls">
                                                    <input type="text" value=@Model.Telefono readonly="readonly" id="Phone" class="form-control">
                                                </div>
                                            </div>
                                        </div>
                                    </fieldset>
                                </form>
                                <form>
                                    <br />
