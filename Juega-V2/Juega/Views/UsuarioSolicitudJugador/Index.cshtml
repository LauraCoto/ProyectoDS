
@{
    ViewBag.Title = "Index";
}

<script src="~/app/controller/UsuarioSolicitudJugadorCtrl.js"></script>


<div class="container" ng-app="appUsuarioSolicitudJugador" ng-controller="UsuarioSolicitudJugadorCtrl">
    <div class="row">
        <div class="col-md-12">



            <div ng-if="MostrarError=='N'">
                <table class="table table-striped">
                    <tr>
                        <th>Usuario</th>
                        <th>Equipo</th>
                    </tr>

                    <tr ng-repeat="item in ListaRegistros">
                        <td> {{item.IdUsuario}}  </td>
                        <td> {{item.IdEquipo}} </td>
                        <td ng-repeat="">

                        </td>

                        <td>
                            @*<button type="button" ng-click="EditarRegistro(item)" class="btn-green">Editar</button>
                            <button type="button" ng-click="EliminarRegistro(item)" class="btn-danger">Borrar</button>*@
                            <button type="button" ng-click="Aceptar(item)" class="btn-green">Aceptar</button>
                            <button type="button" ng-click="Rechazar(item)" class="btn-danger" >Rechazar</button>
                        </td>
                    </tr>

                    <form name="form" class="css-form" novalidate>
                        <tr ng-if="MostrarControles">

                            <td>
                                <input type="text"  class="form-control" placeholder="Id Usuario" ng-model="Registro.IdUsuario" />
                            </td>

                            <td>
                                <input type="text" class="form-control" placeholder="Id Equipo" maxlength="10" name="txtNombre" ng-model="Registro.IdEquipo" />
                            </td>
                            <td>
                                <button type="button" class="btn btn-primary" ng-click="Guardar()">Aceptar</button>
                                <button type="button" class="btn btn-default" ng-click="Limpiar()">Cancelar</button>
                            </td>
                        </tr>
                    </form>


                </table>
                <a ng-click="NuevoRegistro()" class="btn btn-primary">Nuevo</a>
            </div>


            <div ng-if="MostrarError=='S'">
                <br />
                <br />
                <div class="alert alert-danger" role="alert">
                    {{Mensaje}}
                </div>
            </div>

            <div ng-if="MostrarAlerta=='S'">
                <br />
                <br />
                <div class="alert alert-warning" role="alert">
                    {{Mensaje}}
                </div>
            </div>

            <div ng-if="MostrarInfo=='S'">
                <br />
                <br />
                <div class="alert alert-green" role="alert">
                    {{Mensaje}}
                </div>
            </div>

        </div>
    </div>
</div>


